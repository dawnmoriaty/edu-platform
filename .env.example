# ===========================================
# EDU-PLATFORM ENVIRONMENT - EXAMPLE
# Copy this file to .env and modify values
# ===========================================

# ----- Application -----
APP_ENV=development
APP_DEBUG=true

# ----- PostgreSQL -----
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=root
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=edu_platform_db

# ----- Redis -----
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ----- Java CRM Service -----
JAVA_CRM_PORT=8080
JAVA_CRM_GRPC_PORT=9090

# ----- Go Social Service -----
SOCIAL_SERVICE_PORT=8001
SOCIAL_SERVICE_HOST=0.0.0.0

# ----- Kraken Gateway -----
GATEWAY_PORT=8000
GATEWAY_HOST=0.0.0.0

# ----- JWT/Security -----
JWT_SECRET=change-this-in-production
JWT_EXPIRATION=86400

# ----- gRPC -----
GRPC_JAVA_HOST=localhost
GRPC_JAVA_PORT=9090
